= form_for @sprint do |f|
  - if @sprint.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sprint.errors.count, "error")} prohibited this sprint from being saved:"
      %ul
        - @sprint.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pid
    = f.text_field :pid
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :closed
    = f.text_field :closed
  .field
    = f.label :velocity
    = f.text_field :velocity
  .field
    = f.label :have_all_changes
    = f.text_field :have_all_changes
  .field
    = f.label :have_processed_all_changes
    = f.text_field :have_processed_all_changes
  .field
    = f.label :start_date
    = f.text_field :start_date
  .field
    = f.label :end_date
    = f.text_field :end_date
  .actions
    = f.submit 'Save'
