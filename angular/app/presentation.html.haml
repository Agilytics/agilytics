  :javascript
    impress().init();

    $(".panel").each(function(index){
      var $this = $(this),
        content = $this.html();

      if(index % 2 == 0){ /*even on left*/
        $this.addClass("l");
      }else{
        $this.addClass("r");
      }

      $(this).html("");
      $('<div class="result" hidden></div>').appendTo(this).html(content);
      $('<div class="code"></div>').appendTo(this).html(content);
    });

    // cache unadulterated code in data
    $("pre.prettyprint").each(function(el){

       var $this = $(this),
           js = $this.text();

        if( $this.hasClass("coffee") ){
          js = CoffeeScript.compile(js);
        }

       $this.data("code", js);
    });

    $(".result").click(function(){
      $(this).hide();
      $(".code").fadeIn();
    })

    // on click eval
    $("pre").on("click", function(){
      var js;

      $this = $(this);

      if($this.hasClass("clicked")){

        $this.removeClass("clicked");
        $(".result").hide(200, function(){ $(".code").fadeIn() });

      } else {
        var p = $this.closest(".panel"),
            step = $this.closest(".step"),
            $step = $(step),
            $p = $(p),
            $resultPanel,
            $result;

        if($p.hasClass("l")){
          $resultPanel = $step.find(".panel.r");
        }else{
          $resultPanel = $step.find(".panel.l");
        }
        $result = $($resultPanel.find(".result"));

        window.$out = { html : function(str){
                                  var fn = haml.compileHaml({source: str});
                                  $result.html(fn());
                                },
                        append: function(str){
                                  var fn = haml.compileHaml({source: str});
                                  $result.append(fn());
                                }
                       };

        $resultPanel.find(".code").hide(); $result.fadeIn();

        $this.addClass("clicked");
        js = $this.data("code");
        console.log(js);
        eval(js);

      }
    });

    // pretty format the code
    prettyPrint();